#calculate power. First, calculate mean and sd

family_lcn2 %>% group_by(TreatmentWeek)%>% select(Lcn2_ug_per_mg_feces,TreatmentWeek) %>% filter(Lcn2_ug_per_mg_feces>0) %>% summarise_each(funs(mean,sd,length))

